<h1>Youtube検索</h1>

  <%= form_with(url: searchs_url, scope: :search, local: true) do |f| %>
  <label>キーワード</label><%= f.text_field :keyword,:value =>session[:keyword]%><br>
  <label>数　　　　</label><%= f.number_field :row_count,:value =>session[:row_count], min:1,max:20,step:1%> 
<%= f.submit '検索' %>
<%end%>
<%= link_to "CSV出力", youtube_path(format: :csv), class: "btn btn-primary" %>
<%if @youtube_data.present? %>
<% @youtube_data.items.each do |item| %>
  <% snippet = item.snippet %>
  <p><%= snippet.title %></p>
  <p><%= snippet.published_at %><%= snippet.channel_title %></p>
  <div><iframe width="560" height="315" src="https://www.youtube.com/embed/<%= item.id.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></div>
<% end %>
<% end %>
